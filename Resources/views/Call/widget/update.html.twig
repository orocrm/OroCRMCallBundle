<div class="widget-content call-form">
    {% if saved is defined and saved %}
        <script type="text/javascript">
            require(['underscore', 'oro/translator', 'oro/widget-manager', 'oro/messenger'],
            function(_, __, widgetManager, messenger) {
                widgetManager.getWidgetInstance({{ app.request.get('_wid')|json_encode|raw }}, function(widget) {
                    messenger.notificationFlashMessage('success', __('Call logged successfully'));
                    widget.trigger('contactCallLogged');
                    widget.remove();
                });
            });
        </script>
    {% else %}
        
        {% if not form.vars.valid and form.vars.errors|length %}
            <div class="alert alert-error">
                <div class="message">
                    {{ form_errors(form) }}
                </div>
            </div>
        {% endif %}
        <div class="form-container">
            <form id="{{ form.vars.name }}" action="{{ path('orocrm_call_create', {'no_redirect': true }) }}" method="post">
                <fieldset class="form form-horizontal">
                    <div class="span6">
                        {% if form.owner is defined %}
                            {{ form_row(form.owner, {label: 'orocrm.call.owner.label'|trans}) }}
                        {% endif %}
                        {{ form_row(form.subject, {'label': 'orocrm.call.subject.label'|trans}) }}
                        {{ form_row(form.notes, {'label': 'orocrm.call.notes.label'|trans}) }}
                        {{ form_row(form.callDateTime, {'label': 'orocrm.call.call_date_time.label'|trans}) }}
                    </div>
                    <div class="span6">
                        {{ form_row(form.relatedAccount, {'label': 'orocrm.call.related_account.label'|trans}) }}
                        {{ form_row(form.relatedContact, {'label': 'orocrm.call.related_contact.label'|trans}) }}
                        {{ form_row(form.contactPhoneNumber, {'label': 'orocrm.call.contact_phone_number.label'|trans}) }}
                        {{ form_widget(form.phoneNumber) }}
                        {{ form_row(form.direction, {'label': 'orocrm.call.direction.label'|trans}) }}
                        {{ form_row(form.duration, {'label': 'orocrm.call.duration.label'|trans}) }}
                        {{ form_row(form.callStatus) }}
                    </div>
                    {{ form_rest(form) }}
                    <div class="widget-actions form-actions">
                        <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>
                        <button class="btn btn-primary" type="submit">{{ 'Log call'|trans }}</button>
                    </div>
                </fieldset>
            </form>
            {{ oro_form_js_validation(form) }}
        </div>

        <script type="text/javascript">
            require(['jquery', 'orocrm/contactphone/view'],
            function($, ContactPhoneView){
                $(function() {
                    new ContactPhoneView({
                        contact: $('#{{ form.relatedContact.vars.id }}'),
                        phoneSelector: $('#{{ form.contactPhoneNumber.vars.id }}'),
                        phonePlain: $('#{{ form.phoneNumber.vars.id }}')
                    });
                });
            });            
        </script>        
    {% endif %}
</div>
