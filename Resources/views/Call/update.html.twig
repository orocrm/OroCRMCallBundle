{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set formAction = form.vars.value.id ? path('orocrm_call_update', { 'id': form.vars.value.id }) : path('orocrm_call_create')  %}

{% block head_script %}
    {{ parent() }}

    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block content_data %}

    {% set id = 'call-log' %}

    {% set dataBlocks = [{
            'title': 'Add a call log'|trans,
            'class': 'active',
            'subblocks': [
                {
                    'title': 'Add a call log'|trans,
                    'data': [
                        form_row(form.owner, {'label': 'orocrm.call.form.call.owner'|trans}),
                        form_row(form.subject, {'label': 'orocrm.call.form.call.subject'|trans}),
                        form_row(form.notes, {'label': 'orocrm.call.form.call.notes'|trans}),
                        form_row(form.callDateTime, {'label': 'orocrm.call.form.call.dateTime'|trans}),
                        form_row(form.relatedAccount, {'label': 'orocrm.call.form.call.relatedTo'|trans}),
                        form_row(form.relatedContact, {'label': 'orocrm.call.form.call.relatedContact'|trans}),
                        form_row(form.contactPhoneNumber, {'label': 'orocrm.call.form.call.phoneNumber'|trans}),
                        form_row(form.phoneNumber, {'label': 'orocrm.call.form.call.contactPhoneNumber'|trans}),
                        form_row(form.direction, {'label': 'orocrm.call.form.call.direction'|trans}),
                        form_row(form.duration, {'label': 'orocrm.call.form.call.duration'|trans}),
                        form_row(form.callStatus),
                        form_rest(form)
                    ]
                }
            ]
        }]
    %}

    {% set data =
        {
            'formErrors': form_errors(form)? form_errors(form) : null,
            'dataBlocks': dataBlocks,
        }
    %}

    {% set isRelatedContact = (form.vars.value.relatedContact is null) ? 0 : 1 %}
    <script type="text/javascript">
        require(['jquery', 'orocrm/contactphone/view', 'orocrm/contactphone/collection'],
        function($, ContactPhoneView, ContactPhoneCollection){
            $(function() {
                new ContactPhoneView({
                    el: $('#orocrm_call_call_form_relatedContact'),
                    target: $('#orocrm_call_call_form_contactPhoneNumber'),
                    simpleEl: $('#orocrm_call_call_form_phoneNumber'),
                    collection: new ContactPhoneCollection(),
                    isRelatedContact: {{ isRelatedContact }}
                });
            });
        });            
    </script>

    {{ parent() }}
{% endblock content_data %}

{% block navButtons %}    
    {{ UI.button({'path' : path('orocrm_call_index'), 'title' : 'Cancel'|trans, 'label' : 'Cancel'|trans}) }}
    {{ UI.saveAndStayButton('orocrm_call_index') }}
    {{ UI.saveAndCloseButton() }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orocrm_call_index'),
            'indexLabel': 'Calls'|trans,
            'entityTitle': form.vars.value.name|default('N/A')
        }
        %}
        {{ parent() }}
    {% else %}
        {% include 'OroUIBundle::page_title_block.html.twig' %}
    {% endif %}
{% endblock pageHeader %}


{% block styles %}
    <style>
    .plainphonenumber {
        width: 220px;
        margin-top: 12px;
    }
    </style>
{% endblock %}