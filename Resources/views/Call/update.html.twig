{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set formAction = form.vars.value.id ? path('orocrm_call_update', { 'id': form.vars.value.id }) : path('orocrm_call_create')  %}

{% block head_script %}
    {{ parent() }}

    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block content_data %}

    {% set id = 'call-log' %}

    {% set dataBlocks = [{
            'title': 'Add a call log'|trans,
            'class': 'active',
            'subblocks': [
                {
                    'title': 'Add a call log'|trans,
                    'data': [
                        form_widget(form)
                    ]
                }
            ]
        }]
    %}

    {% set data =
        {
            'formErrors': form_errors(form)? form_errors(form) : null,
            'dataBlocks': dataBlocks,
        }
    %}

    <script type="text/template" id="contactphone-chooser-template">
        <% _.each(contactphones, function(p, i) { %>
            <option value="<%= p.get('id') %>"><%= p.get('phone') %></option>
        <% }); %>
            <option value="-1">{% trans %}Other{% endtrans %}...</option>
    </script>

    <script type="text/javascript">
        require(['jquery', 'orocrm/contactphone/view', 'orocrm/contactphone/collection'],
        function($, ContactPhoneView, ContactPhoneCollection){
            $(function() {
                new ContactPhoneView({
                    el: $('#orocrm_call_call_form_relatedContact'),
                    target: $('#orocrm_call_call_form_contactPhoneNumber'),
                    simpleEl: $('#orocrm_call_call_form_phoneNumber'),
                    collection: new ContactPhoneCollection(),
                    showSelect: false
                });
            });
        });            
    </script>

    {{ parent() }}
{% endblock content_data %}


{% block navButtons %}
    {{ UI.button({'path' : path('orocrm_contact_index'), 'title' : 'Cancel'|trans, 'label' : 'Cancel'|trans}) }}
    {{ UI.saveAndStayButton('orocrm_call_update') }}
    {{ UI.saveAndCloseButton() }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orocrm_call_index'),
            'indexLabel': 'Calls'|trans,
            'entityTitle': form.vars.value.name|default('N/A')
        }
        %}
        {{ parent() }}
    {% else %}
        {% include 'OroUIBundle::page_title_block.html.twig' %}
    {% endif %}
{% endblock pageHeader %}
